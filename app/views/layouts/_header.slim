/! partial header

header#header.l-header
  .l-inner
    h1.l-header__logo
      = link_to root_path
        =image_tag "common/logo.png", alt:"umineco"

    navi
      ul.l-header__navi
        - if user_signed_in?
          li
            .fbIcon
              = image_tag(current_user.picture)
            = current_user.name

          li
            span.icon-icn_arrow.icn_arrow--blue
            = link_to 'ログアウト', destroy_user_session_path, method: :delete
        - else

          li
            span.icon-icn_arrow.icn_arrow--blue
            = link_to 'ログイン', user_omniauth_authorize_path(:facebook)
            /p.notice= notice
            /p.alert= alert
        li
          span.icon-icn_arrow.icn_arrow--blue
          = link_to "/about"
            |uminecoとは


/! /partial header

